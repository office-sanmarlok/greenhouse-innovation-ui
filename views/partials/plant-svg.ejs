<% if (type === 'bloom') { %>
    <svg class="plant-icon" width="<%= size === 'large' ? '60' : '40' %>" height="<%= size === 'large' ? '60' : '40' %>" viewBox="0 0 60 60">
        <circle cx="30" cy="20" r="15" fill="#4CAF50" opacity="0.3"/>
        <circle cx="30" cy="20" r="10" fill="#4CAF50" opacity="0.5"/>
        <circle cx="30" cy="20" r="5" fill="#4CAF50"/>
        <path d="M30 25 L30 45" stroke="#4CAF50" stroke-width="3"/>
        <ellipse cx="25" cy="35" rx="8" ry="4" fill="#4CAF50" opacity="0.6" transform="rotate(-30 25 35)"/>
        <ellipse cx="35" cy="38" rx="8" ry="4" fill="#4CAF50" opacity="0.6" transform="rotate(30 35 38)"/>
    </svg>
<% } else if (type === 'sprout') { %>
    <svg class="plant-icon" width="<%= size === 'large' ? '50' : '40' %>" height="<%= size === 'large' ? '50' : '40' %>" viewBox="0 0 50 50">
        <path d="M25 40 L25 20 Q25 10, 35 10 Q45 10, 45 20 Q45 30, 35 30 Q30 30, 25 25" fill="#81C784" stroke="#4CAF50" stroke-width="2"/>
        <path d="M25 40 L25 20 Q25 10, 15 10 Q5 10, 5 20 Q5 30, 15 30 Q20 30, 25 25" fill="#A5D6A7" stroke="#4CAF50" stroke-width="2"/>
    </svg>
<% } else { %>
    <svg class="plant-icon" width="<%= size === 'large' ? '45' : '40' %>" height="<%= size === 'large' ? '45' : '40' %>" viewBox="0 0 45 45">
        <ellipse cx="22" cy="35" rx="12" ry="5" fill="#8BC34A" opacity="0.3"/>
        <path d="M22 35 L22 15" stroke="#4CAF50" stroke-width="3"/>
        <circle cx="22" cy="12" r="8" fill="#66BB6A" opacity="0.8"/>
        <circle cx="22" cy="12" r="4" fill="#4CAF50"/>
    </svg>
<% } %>