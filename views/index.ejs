<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Greenhouse of Innovation - Project Launchpad</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <!-- Greenhouse Canopy Header -->
    <header class="greenhouse-canopy">
        <div class="canopy-content">
            <div class="logo-section">
                <svg class="logo-icon" width="32" height="32" viewBox="0 0 32 32">
                    <path d="M16 2 L8 10 L8 28 L24 28 L24 10 Z" fill="none" stroke="currentColor" stroke-width="2"/>
                    <path d="M12 10 L12 6 M16 10 L16 4 M20 10 L20 6" stroke="currentColor" stroke-width="2"/>
                </svg>
                <span class="logo-text">Greenhouse</span>
            </div>
            
            <div class="search-container">
                <div class="search-bar">
                    <svg class="search-icon" width="20" height="20" viewBox="0 0 20 20">
                        <circle cx="8" cy="8" r="6" fill="none" stroke="currentColor" stroke-width="2"/>
                        <path d="M13 13 L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                    </svg>
                    <input type="text" placeholder="Search for sprouting ideas..." id="searchInput">
                </div>
            </div>
            
            <div class="climate-controls">
                <button class="climate-dial" data-filter="all">
                    <svg width="24" height="24" viewBox="0 0 24 24">
                        <circle cx="12" cy="12" r="10" fill="none" stroke="currentColor" stroke-width="2"/>
                        <path d="M12 6 L12 18 M6 12 L18 12" stroke="currentColor" stroke-width="2"/>
                    </svg>
                </button>
                <button class="climate-dial" data-filter="trending">
                    <svg width="24" height="24" viewBox="0 0 24 24">
                        <path d="M3 17 L9 11 L13 15 L21 7" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </button>
                <button class="plant-seed-btn" id="plantSeedBtn">
                    <svg width="20" height="20" viewBox="0 0 20 20">
                        <ellipse cx="10" cy="12" rx="6" ry="8" fill="currentColor" opacity="0.3"/>
                        <path d="M10 4 Q10 2, 12 2 Q14 2, 14 4 L14 8" fill="none" stroke="currentColor" stroke-width="2"/>
                    </svg>
                    <span>Plant a New Seed</span>
                </button>
            </div>
        </div>
    </header>

    <!-- Garden Beds Navigation -->
    <nav class="garden-beds">
        <div class="beds-container">
            <button class="bed-nav prev">
                <svg width="20" height="20" viewBox="0 0 20 20">
                    <path d="M12 5 L7 10 L12 15" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </button>
            
            <div class="beds-strip">
                <% weeks.forEach(week => { %>
                <div class="bed <%= week.id === currentWeek ? 'active' : '' %>" data-week="<%= week.id %>">
                    <span class="week-label"><%= week.label %></span>
                    <span class="sprout-count"><%= week.count %> sprouts</span>
                    <% if (week.id === currentWeek) { %>
                    <div class="vine-border"></div>
                    <% } %>
                </div>
                <% }) %>
            </div>
            
            <button class="bed-nav next">
                <svg width="20" height="20" viewBox="0 0 20 20">
                    <path d="M8 5 L13 10 L8 15" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </button>
        </div>
    </nav>

    <!-- Main Greenhouse Grid -->
    <main class="greenhouse-grid">
        <div class="grid-container">
            <!-- Top Performers Section -->
            <% const topProjects = projects.filter(p => p.rank).sort((a, b) => a.rank - b.rank); %>
            <% if (topProjects.length > 0) { %>
            <section class="featured-garden">
                <h2 class="section-title">
                    <svg class="title-icon" width="24" height="24" viewBox="0 0 24 24">
                        <path d="M12 2 L15 9 L22 9 L17 14 L19 21 L12 17 L5 21 L7 14 L2 9 L9 9 Z" fill="currentColor" opacity="0.3" stroke="currentColor" stroke-width="2"/>
                    </svg>
                    Prize-Winning Blooms
                </h2>
                
                <div class="featured-pots">
                    <% topProjects.forEach(project => { %>
                    <article class="potted-plant featured" data-rank="<%= project.rank %>" data-id="<%= project.id %>">
                        <div class="pot">
                            <div class="prize-ribbon <%= project.rank === 1 ? 'gold' : project.rank === 2 ? 'silver' : 'bronze' %>">
                                <span>#<%= project.rank %></span>
                            </div>
                            <div class="plant-container">
                                <div class="plant <%= project.plantType %>">
                                    <%- include('partials/plant-svg', { type: project.plantType, size: 'large' }) %>
                                </div>
                                <div class="vitality-vine" style="--growth: <%= project.growth %>%">
                                    <div class="vine-stalk"></div>
                                    <div class="vine-leaves">
                                        <% for(let i = 0; i < Math.floor(project.growth / 33); i++) { %>
                                        <span class="leaf"></span>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                            <div class="plant-details">
                                <h3 class="plant-name"><%= project.name %></h3>
                                <p class="plant-description"><%= project.description %></p>
                                <div class="plant-meta">
                                    <% project.tags.forEach(tag => { %>
                                    <span class="nutrient-label"><%= tag %></span>
                                    <% }) %>
                                </div>
                                <div class="growth-stats">
                                    <svg class="stat-icon vote-btn" width="16" height="16" viewBox="0 0 16 16" data-project-id="<%= project.id %>">
                                        <path d="M8 12 L4 8 L6 8 L6 4 L10 4 L10 8 L12 8 Z" fill="currentColor"/>
                                    </svg>
                                    <span class="stat-value" id="votes-<%= project.id %>"><%= project.votes %></span>
                                </div>
                            </div>
                        </div>
                    </article>
                    <% }) %>
                </div>
            </section>
            <% } %>

            <!-- Regular Garden Grid -->
            <% const regularProjects = projects.filter(p => !p.rank); %>
            <% if (regularProjects.length > 0) { %>
            <section class="regular-garden">
                <h2 class="section-title">
                    <svg class="title-icon" width="24" height="24" viewBox="0 0 24 24">
                        <circle cx="12" cy="18" r="3" fill="currentColor" opacity="0.3"/>
                        <path d="M12 15 L12 6 M9 9 L12 6 L15 9" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                    </svg>
                    Fresh Sprouts
                </h2>
                
                <div class="plant-grid">
                    <% regularProjects.forEach(project => { %>
                    <article class="potted-plant" data-id="<%= project.id %>">
                        <div class="pot">
                            <div class="plant-container">
                                <div class="plant <%= project.plantType %>">
                                    <%- include('partials/plant-svg', { type: project.plantType, size: 'medium' }) %>
                                </div>
                                <div class="vitality-vine" style="--growth: <%= project.growth %>%">
                                    <div class="vine-stalk"></div>
                                    <div class="vine-leaves">
                                        <% for(let i = 0; i < Math.floor(project.growth / 33); i++) { %>
                                        <span class="leaf"></span>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                            <div class="plant-details">
                                <h3 class="plant-name"><%= project.name %></h3>
                                <p class="plant-description"><%= project.description %></p>
                                <div class="plant-meta">
                                    <% project.tags.forEach(tag => { %>
                                    <span class="nutrient-label"><%= tag %></span>
                                    <% }) %>
                                </div>
                                <div class="growth-stats">
                                    <svg class="stat-icon vote-btn" width="16" height="16" viewBox="0 0 16 16" data-project-id="<%= project.id %>">
                                        <path d="M8 12 L4 8 L6 8 L6 4 L10 4 L10 8 L12 8 Z" fill="currentColor"/>
                                    </svg>
                                    <span class="stat-value" id="votes-<%= project.id %>"><%= project.votes %></span>
                                </div>
                            </div>
                        </div>
                    </article>
                    <% }) %>
                </div>
            </section>
            <% } %>

            <!-- Empty State -->
            <% if (projects.length === 0) { %>
            <section class="unplanted-seedbed">
                <div class="seedbed-content">
                    <div class="soil-texture"></div>
                    <div class="nascent-seeds">
                        <span class="seed"></span>
                        <span class="seed"></span>
                        <span class="seed"></span>
                    </div>
                    <h3 class="seedbed-message">Ready for planting</h3>
                    <p class="seedbed-description">This fertile ground awaits your innovative ideas</p>
                    <button class="add-first-seed" id="addFirstSeed">
                        <svg width="20" height="20" viewBox="0 0 20 20">
                            <circle cx="10" cy="10" r="8" fill="currentColor" opacity="0.2"/>
                            <path d="M10 6 L10 14 M6 10 L14 10" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                        </svg>
                        <span>Add the First Seed</span>
                    </button>
                </div>
            </section>
            <% } %>
        </div>
    </main>

    <!-- Master Gardeners Section -->
    <aside class="master-gardeners">
        <h3 class="gardeners-title">Master Gardeners</h3>
        <div class="gardener-list">
            <% gardeners.forEach(gardener => { %>
            <div class="gardener">
                <img src="<%= gardener.avatar %>" alt="<%= gardener.name %>" class="gardener-avatar">
                <span class="gardener-name"><%= gardener.name %></span>
                <span class="gardener-plants"><%= gardener.blooms %> blooms</span>
            </div>
            <% }) %>
        </div>
    </aside>

    <!-- Plant Modal Template -->
    <div id="plantModal" class="plant-modal" style="display: none;">
        <div class="modal-backdrop"></div>
        <div class="modal-content">
            <h2>Plant Your Innovation Seed</h2>
            <form id="plantingForm" class="planting-form">
                <div class="form-group">
                    <label>Project Name</label>
                    <input type="text" name="name" placeholder="Give your plant a name..." required>
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <textarea name="description" placeholder="Describe what will grow..." required></textarea>
                </div>
                <div class="form-group">
                    <label>Nutrients (Tags)</label>
                    <input type="text" name="tags" placeholder="e.g., React, AI, Analytics">
                </div>
                <div class="form-actions">
                    <button type="button" class="cancel-btn">Cancel</button>
                    <button type="submit" class="plant-btn">Plant Seed</button>
                </div>
            </form>
        </div>
    </div>

    <script src="/js/client.js"></script>
</body>
</html>